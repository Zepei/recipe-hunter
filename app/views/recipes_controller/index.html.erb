<h1> Recipes for <%= @search_term %></h1>

<table>
	<tr>
		<th>Thumbnail</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
	  <tr>
		<td><%= link_to image_tag(recipe["image_url"], width: 66, height: 66), recipe["f2f_url"] %></td>
		<td><%= link_to sanitize(recipe["title"]), recipe["f2f_url"] %></td>
		<td><%= recipe["social_rank"] %></td>
	  </tr>
	<% end %>
</table>